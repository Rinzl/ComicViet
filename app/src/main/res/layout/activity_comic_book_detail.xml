<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comic_book_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.thd.comicviet.ComicBookDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:textColor="#F24234"
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetailName"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/ivBookDetailCover"
            android:layout_marginLeft="10dp"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/placeholder"
            android:id="@+id/ivBookDetailCover"
            android:layout_width="125dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop" />

        <TextView
            android:text="Tac Gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDetailName"
            android:layout_marginTop="14dp"
            android:id="@+id/tvDetailAuthor"
            android:layout_alignStart="@+id/tvDetailName"
            android:textSize="15sp" />

        <TextView
            android:text="Noi Dung :"
            android:scrollbars="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvDetailAuthor"
            android:layout_alignStart="@+id/tvDetailAuthor"
            android:layout_marginTop="12dp"
            android:id="@+id/tvDetailND"
            android:layout_alignParentEnd="true"
            android:textStyle="normal|italic"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:text="Chapter :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginBottom="10dp"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvChapter" />

</LinearLayout>
